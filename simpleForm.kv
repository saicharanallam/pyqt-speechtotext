<LblTxt@BoxLayout>:
    orientation: 'horizontal'      
    lblTxtIn: 'default'
    theTxt: iAmTxt
    Label:
        text: root.lblTxtIn
    TextInput:
        id: iAmTxt  
 
        text: "%s"%(app.abc)


        on_focus: print(iAmTxt.text)

